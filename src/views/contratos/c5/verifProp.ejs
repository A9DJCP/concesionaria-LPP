<!DOCTYPE html>
<html>

<head>
    <title>Verificar Propietario</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/c5/verifProp.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Activa el Dark Mode-->
    <%- include('../../partials/head') %>
</head>

<body>
    <%- include('../../partials/navigation') %>
        <% if (typeof msg !=='undefined' ) { %>
            <script>
                alert('<%= msg %>');
            </script>
            <% } %>
                <div class="container">
                    <a id="backButton" href="/c5" class="btn btn-danger" style="margin-top:1%"> Regresar </a>
                    <div class="margin">
                        <form id="survey-form" action="/c5/b1/verifProp" method="POST" required>
                            <p id="principal-description">Información Personal:</p>
                            <label for="nombre-label" id="nombre-label">Nombre</label>
                            <input type="text" id="nombre" placeholder="Nombre del Propietario" name="nom" required>
                            <label for="apellido-label" id="apellido-label">Apellido</label>
                            <input type="text" id="apellido" placeholder="Apellido del Propietario" name="ape" required>
                            <label for="tipo-documento-label" id="tipo-documento-label">Tipo de Documento</label>
                            <select id="dropdown" name="tdoc">
                                <option disable selected value>Elige una opción</option>
                                <option value="dni">DNI</option>
                                <option value="dni-extranjero">DNI Extranjero</option>
                            </select>
                            <label for="documento-label" id="documento-label">Número de Documento</label>
                            <input type="documento" id="documento" placeholder="Nro. Documento" name="ndoc" required>
                            <p id="description">Información de Contacto</p>
                            <label for="direccion-label" id="direccion-label">Dirección</label>
                            <input type="direccion" id="direccion" placeholder="Dirección" name="direc" required>
                            <label for="telefono-label" id="telefono-label">Teléfono</label>
                            <input type="telefono" id="telefono" placeholder="Teléfono" name="tel" required>
                            <label for="email-label" id="email-label">Email</label>
                            <input type="email" id="email" placeholder="Email" name="email" required>
                            <div class="botones">
                                <input id="continueB2Button" type="submit" class="submit btn btn-danger"
                                    style="margin-top:1%" value="Procesar Propietario">
                            </div>
                        </form>
                    </div>
                </div>
</body>

</html>