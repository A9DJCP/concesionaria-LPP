<!DOCTYPE html>
<html>

<head>
    <title>LPP Concesionaria de Autos</title>
    <link rel="stylesheet" href="/css/c1/generarRetiro.css">


    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <!-- Activa el dark mode-->
    <%- include('../../partials/head') %>
</head>

<body>
    <%- include('../../partials/navigation') %>
        <% if (typeof msg !=='undefined' ) { %>
            <script>
                alert('<%= msg %>');
            </script>
            <% } %>
                <div class="container">
                    <div id="encabezado">
                        <h1 id="titulo">LPP Concesionaria de Autos</h1>
                        <img src="/img/logo.png" alt="logo" height="100px">
                        <img src="/img/logoLPP.png" alt="logo" height="100px">
                    </div>
                    <table id="orden-retiro">
                        <tr>
                            <th class="espacio"></th>
                            <th class="espacio"></th>
                            <th>Orden de Retiro</th>
                        </tr>
                        <tr>
                            <th class="espacio"></th>
                            <td class="espacio"></td>
                            <td><b>Nro: <%=data.lblNroOrden%> </b></td>
                        </tr>
                    </table>
                    <table id="auto">
                        <tr>
                            <th>Automovil a Retirar</th>
                            <td>
                                <%=data.lblAuto%>
                            </td>
                        </tr>
                        <tr>
                            <th>Emitido para el Cliente</th>
                            <td>
                                <%=data.lblCliente%>
                            </td>
                        </tr>
                        <tr>
                            <th>Movil de Retiro</th>
                            <td>
                                <%=data.lblMotivo%>
                            </td>
                        </tr>
                        <tr>
                            <th>Fecha de Emisión</th>
                            <td>
                                <%=data.lblFemision%>
                            </td>
                        </tr>
                        <tr>
                            <th>Fecha de Vencimiento</th>
                            <td>
                                <%=data.lblFvto%>
                            </td>
                        </tr>
                        <table id="condiciones">
                            <tr>
                                <th>El Automovil fue Retirado: Si / No</th>
                            </tr>
                        </table>
                    </table>
                    <table id="orden-compra">
                        <tr>
                            <th class="espacio"></th>
                            <th class="espacio"></th>
                            <th class="espacio"></th>
                            <th>Responde a la Orden de Compra</th>
                        </tr>
                        <tr>
                            <th class="espacio"></th>
                            <th class="espacio"></th>
                            <th class="espacio"></th>
                            <td><b>Nro: <%=data.lblNroODC%></b></td>
                        </tr>
                    </table>
                </div>
                <div class="botones" style="text-align: center;">
                    <button id="printButton" class=" btn btn-danger btn-lg btn">Imprimir o Descargar</button>
                    <a id="finalizar" href="/c1" class="btn btn-danger btn-lg btn">Finalizar Operación</a>
                </div>
