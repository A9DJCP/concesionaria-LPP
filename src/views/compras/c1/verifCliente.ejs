<!DOCTYPE html>
<html>

<head>
    <title>L.P.P Concesionario</title>
    <meta charset="utf-8">
    <link rel="stylesheet" href="/css/c1/verifCliente.css">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--Activa el Dark Mode-->
    <%- include('../../partials/head') %>
        <script src="/js/c1/b1/verifCliente.js"></script>
</head>

<body>
    <%- include('../../partials/navigation') %>
        <div class="container">
            <div id="espaciado"></div>
            <div class="margin">
                <form id="survey-form" required>
                    <p id="principal-description">Carga los datos del cliente que solicita el auto:</p>
                    <p id="description">Información Personal</p>
                    <label for="nombre-label" id="nombre-label">Nombre</label>
                    <input type="text" id="nombre" placeholder="Nombre del Cliente" required>
                    <label for="apellido-label" id="apellido-label">Apellido</label>
                    <input type="text" id="apellido" placeholder="Apellido del Cliente" required>
                    <label for="tipo-documento-label" id="tipo-documento-label">Tipo de Documento</label>
                    <select id="dropdown">
                        <option disable selected value>Elige una opción</option>
                        <option value="dni">DNI</option>
                        <option value="dni-extranjero">DNI Extranjero</option>
                    </select>
                    <label for="documento-label" id="documento-label" id="description">Número de Documento</label>
                    <input type="documento" id="documento" placeholder="Nro. Documento" required>


                    <% if (enable===true) { %>
                        <script>
                            var nom = document.getElementById('nombre');
                            var ape = document.getElementById('apellido');
                            var tdoc = document.getElementById('dropdown');
                            var ndoc = document.getElementById('documento');
                            var btn = document.getElementById('verifButton');
                            nom.disabled = true;
                            ape.disabled = true;
                            tdoc.disabled = true;
                            ndoc.disabled = true;
                            btn.disabled = true;
                            nom.value = '<%= nom %>'
                            ape.value = '<%= ape %>'
                            tdoc.value = '<%= tdoc %>'
                            ndoc.value = '<%= ndco %>'
                        </script>
                        <p id="description">Información de Contacto</p>
                        <label for="direccion-label" id="direccion-label">Dirección</label>
                        <input type="direccion" id="direccion" placeholder="Dirección" required>
                        <label for="telefono-label" id="telefono-label">Teléfono</label>
                        <input type="telefono" id="telefono" placeholder="Teléfono" required>
                        <label for="email-label" id="email-label">Email</label>
                        <input type="email" id="email" placeholder="Email" required>
                        <p id="requisitos">El cliente cumple con los requisitos del mercado:</p>
                        <div id="div-requisitos">
                            <label>
                                <input type="radio" value="si" name="grupo">
                                Si
                            </label>
                            <label>
                                <input type="radio" value="no" name="grupo">
                                No
                            </label>
                        </div>
                        <% } %>
                            <div class="botones">

                                <a id="backButton" href="/c1" class="btn btn-danger" style="margin-top:1%"> Regresar
                                </a>

                                <button id="verifClientBtn" class="btn btn-danger" style="margin-top:1%">
                                    Verificar Cliente </button>

                                <input id="ingresarClienteButton" type="submit" class="btn btn-danger"
                                    style="margin-top:1%" value="Ingresar Cliente">
                            </div>
                </form>
            </div>
        </div>
        <%- include('../../partials/footer') %>
</body>


</html>