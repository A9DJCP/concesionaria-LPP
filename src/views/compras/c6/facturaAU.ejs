<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8">
  <title>Documento</title>
  <link rel="stylesheet" href="/css/c6/printForm.css">
  <!-- Bootstrap CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
  <!-- Activa el Dark Mode -->
  <%- include('../../partials/head') %>
</head>

<body>
  <%- include('../../partials/navigation') %>
    <% if (typeof msg !=='undefined' ) { %>
      <script>
        alert('<%= msg %>');
      </script>
      <% } %>
        <header>
          <div id='imagen_div'>
            <img src="/img/logo.png" alt="logo" height="100px">
            <img src="/img/logoLPP.png" alt="logo" height="100px">
          </div>
          <div id="títulos">
            <p class='título'> LPP Concesionaria de autos </p>
          </div>
        </header>

        <div id="elemento">
          <div class="container">
            <form>
              <fieldset>
                <legend>Codigos de Documentos Comerciales</legend>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="n">Número de Factura de Auto Usado</label>
                    <input type="number" class="form-control" id="n" value="<%=data.codFCAU%>" readonly>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="n">Número de Presupuesto de Auto Usado</label>
                    <input type="number" class="form-control" id="n" value="<%=data.nroPres%>" readonly>
                  </div>
                </div>
              </fieldset>

              <fieldset>
                <legend>Datos del Cliente</legend>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="nombre">Nombre</label>
                    <input type="text" class="form-control" id="nombre" value="<%=data.nom%>" readonly>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="apellido">Apellido</label>
                    <input type="text" class="form-control" id="apellido" value="<%=data.ape%>" readonly>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="teléfono">Teléfono</label>
                    <input type="text" class="form-control" id="teléfono" value="<%=data.tel%>" readonly>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="mail">Mail</label>
                    <input type="text" class="form-control" id="mail" value="<%=data.mail%>" readonly>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="tipoDocumento">Tipo de Documento</label>
                    <input type="text" class="form-control" id="tipoDocumento" value="<%=data.tdoc%>" readonly>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="numDocumento">Número de Documento</label>
                    <input type="text" class="form-control" id="numDocumento" value="<%=data.ndoc%>" readonly>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="dirección">Dirección</label>
                    <input type="text" class="form-control" id="dirección" value="<%=data.direc%>" readonly>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="ciudadFecha">Ciudad y Fecha</label>
                    <input type="text" class="form-control" id="ciudadFecha" value="CABA, <%=data.fecha%>" readonly>
                  </div>
                </div>
              </fieldset>

              <fieldset>
                <legend>DETALLE DE VENTA</legend>
                <legend>Condiciones de venta: Pago al Contado en Efectivo.</legend>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="marca">CANTIDAD</label>
                    <input type="text" class="form-control" id="marca" value="1" readonly>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="modelo">Descripcion del Producto</label>
                    <input type="text" class="form-control" id="modelo" value="<%=data.auto%>" readonly>
                  </div>
                </div>
              </fieldset>

              <fieldset>
                <legend>MONTOS</legend>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="tipoDocumentoActual">Sub total ($)</label>
                    <input type="text" class="form-control" id="tipoDocumentoActual" value="<%=data.subTotal%>"
                      readonly>
                  </div>
                  <div class="form-group col-md-6">
                    <label for="numDocumentoActual">IVA inscripto (%)</label>
                    <input type="text" class="form-control" id="numDocumentoActual" value="<%=data.IVA%>" readonly>
                  </div>
                </div>
                <div class="form-row">
                  <div class="form-group col-md-6">
                    <label for="nombreActual">TOTAL ($)</label>
                    <input type="text" class="form-control" id="nombreActual" value="<%=data.total%>" readonly>
                  </div>
                </div>
              </fieldset>
              <div style="text-align: center;">
                <button id="printButton" class="btn-warning btn-lg btn">Imprimir o Descargar</button>
                <a href="/c6" class="btn btn-success btn-lg ">Finalizar Operacion</a>
              </div>
              <script>
                function printOrDownload() {
                  window.print();
                }
                document.getElementById('printButton').addEventListener('click', printOrDownload);
              </script>
            </form>
          </div>
        </div>
        <!-- Bootstrap JS -->
        <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
          integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
          crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"
          integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
          crossorigin="anonymous"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"
          integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
          crossorigin="anonymous"></script>
</body>

</html>