    <%- include('../../partials/navigation') %>
        <% if (typeof msg !=='undefined' ) { %>
            <script>
                alert('<%= msg %>');
            </script>
            <% } %>
                <div class="contenedor">
                    <h1>Administración de Cuotas</h1>
                    <div class="contenedor-botones">
                        <a class="boton menú boton-administracion" href="/c9/b1" style="width: 30%;">
                            <span>Procesar Administración de Cuotas</span>
                        </a>
                    </div>
                    <!-- BOTON 2 - Procesar Aceptación de Orden De Compra -->
                    <div class="contenedor-botones">
                        <div class="card text-center text-dark bg-light">
                            <div class="card-body">
                                <h5 class="card-title">Procesar Recepción de Pago de Cuota</h5>
                                <p class="card-text">Ingrese el código del préstamo cuya cuota se va a abonar.</p>
                                <form name="myForm" action="/c9/b2/pagarCuota" method="POST">
                                    <div class="row row-cols-lg-auto g-3 align-items-center input-group"
                                        style="margin: 10px auto">
                                        <div class="input-group-text">Ingrese el número de préstamo</div>
                                        <input type="text" name="codPRE" class="form-control" id="codRInput"
                                            placeholder="Número de Préstamo" style="width:40%">
                                    </div>

                                    <input id="continueB2Button" type="submit" class="btn btn-danger"
                                        style="margin-top:1%" value="Continuar">
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="contenedor-botones">
                    <a class="boton menú boton-rojo" href="/menu" style="width: 30%;">
                        <span>Regresar</span>
                    </a>
                </div>
                <footer id="footer">
                    <p class="footer-text">LPP Concesionario</p>
                    <p class="footer-text">&copy; 2023 Todos los derechos reservados</p>
                </footer>
