          <input type="text" class="form-control" id="inputCodF" name="codfabrica" placeholder="Codigo fabrica">


          <h1>Datos del Seguro</h1>
          <br>
          <label for="inputMarca3" class="col-sm-6 col-xl-4 col-form-label">Número seguro</label>
          <input type="text" class="form-control" id="inputNumSeguro" name="numseguro" placeholder="Numero de seguro">

          <input id="botonVerReclamos" type="submit" class="btn btn-danger mx-2 mt-2"
            value="Ver Reclamos disponibles" />
          <a class="btn btn-danger mx-2 mt-2" href="/c2">Regresar</a>
        </form>
      </div>
