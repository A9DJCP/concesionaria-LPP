    <!-- Contenido principal -->
    <div class="container-fluid  h-75" style="height: calc(100vh); padding: 40px;">



      <div class="row container mx-auto pt-4 my-4 survey-form" style=" background: linear-gradient(45deg, black, gray);"
        style="width: 60%;">
        <% if (typeof codF !=='undefined' ) {%>
          <div class="col-12 col-xl-12">
            <h3 class="text-center text-light">Accesorios registrados en la Concesionaria LPP del automóvil ingresado
            </h3>
            <div class="caja w-95  border border-light" style="min-height: 400px;">
              <% if (accesorios.length>0) {%>
                <ol>
                  <% for(let i=0; i<accesorios.length; i++) {%>
                    <li>
                      <%= accesorios[i].nom %> (cant: <%=accesorios[i].cant%>) // F. Pedido: <%=accesorios[i].fecha %>
                            // F. Entrega: <%= accesorios[i].entrega%>
                    </li>
                    <% } %>
                </ol>
                <% } else{ %>
                  <h4>El auto ingresado no tiene accesorios registrados en la concesionaria</h4>
                  <% } %>
            </div>
          </div>
          <% } %>

            <h5>*Recuerde que el automóvil ingresado debe tener todos sus accesorios registrados en la concesionaria
              para poder acceder a las reparaciones dentro de la garantía*
            </h5>
            <h6>*Al presionar "Seleccionar Reparaciones" confirma haber comprobado que el automóvil ingresado tiene
              todos sus accesorios registrados en la concesionaria</h6>

            <div class="col-12 py-3">
              <form name="myForm" action="/c2/b2/selecRep" method="POST">
                <input type="hidden" id="codA" name="codA">
                <input name="btnSelecRep" id="continueB2Button" type="submit" class="btn btn-danger"
                  style="margin-top:1%" value="Selecionar Reparaciones">
              </form>
            </div>


            <div class="col-12 py-3">
              <form name="myForm" action="/c2/b2/anular" method="POST">
                <input type="hidden" id="codA2" name="codA">
                <input name="btnSelecRep" id="finalizar" type="submit" class="btn btn-danger" style="margin-top:1%"
                  value="El auto no tiene sus accesorios registrados">
              </form>
            </div>

            <script>
              // Obtener el valor de codA desde el parámetro del archivo EJS
              var codA = '<%= codA %>';
              // Establecer el valor de codA en el campo de entrada oculto
              document.getElementById('codA').value = codA;
              document.getElementById('codA2').value = codA;
            </script>
      </div>


